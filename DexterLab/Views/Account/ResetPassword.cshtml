@model DexterLab.Models.ViewModels.UserVM

@{
    ViewBag.Title = "ResetPassword";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
@if (TempData["Failure"] != null)
{
    <div class="alert alert-danger">
        @TempData["Failure"]
    </div>
}

<h2 class="text-center block text-gray-700 font-bold mb-2">Reset Password</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full max-w-full mx-auto w-full max-w-full sm:max-w-screen-xs  md:max-w-screen-xs lg:max-w-screen-md lg:mt-5">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*@Html.HiddenFor(model => model.Id)*@


    <div class="form-group w-full max-w-full ">
        @*<label class="control-label block text-gray-700 text-lg font-bold mb-2">Email Address</label>*@
        <div class="mb-6 mx-auto">
            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "mx-auto w-full max-w-full shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight  focus:bg-white focus:shadow-outline focus:border-blue-300", @placeholder = "Email Address" } })
            @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="mx-auto">
            <input type="submit" value="Reset" class="btn btn-primary w-full max-w-full" />
        </div>
    </div>
    <a class="w-full max-w-full px-12 text-center text-decoration-none inline-block  font-bold text-sm text-blue-500" href="~/Account/login">Login to your account</a>
</div>
    
}

