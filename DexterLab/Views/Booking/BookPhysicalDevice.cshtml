@model DexterLab.Models.ViewModels.BookingVM

@{
    ViewBag.Title = "BookPhysicalDevice";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
@if (TempData["Failure"] != null)
{
    <div class="alert alert-danger">
        @TempData["Failure"]
    </div>
}

<h2>Book Physical Device</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2"> Device Name</label>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.DeviceName, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.DeviceName, new List<SelectListItem>
                {
                   new SelectListItem { Text = "Palo Alto", Value = "Palo Alto", Selected=true},
                   new SelectListItem { Text = "ChecPoint", Value = "ChecPoint"}
                }, "Select Device", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeviceName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Device Serial No</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeviceSerialNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DeviceSerialNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Booking Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BookingDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BookingDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Purpose of Booking</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BookingPurpose, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BookingPurpose, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </div>
    </div>
}