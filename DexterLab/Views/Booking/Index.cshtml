
@{
    ViewBag.Title = "Booking";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
@if (TempData["Failure"] != null)
{
    <div class="alert alert-danger">
        @TempData["Failure"]
    </div>
}

<h2 class="text-center">Select Your Device:</h2>
<br />
<div class="row container col-md text-center pt-5">
    <div class="col-md container">
        <img class="card-img-top align-items-center" src="~/img/server.svg" alt="Card image" style="height: 300px; width:300px;">
        <div class="card-body">
            <a href="~/Booking/book-physical-device" class="btn btn-lg btn-info text-white ">Physical Device</a>
        </div>
    </div>
    <div class="col-md container">
        <img class="card-img-top align-items-center " src="~/img/computer.svg" alt="Card image" style="height: 300px; width:300px;">
        <div class="card-body">
            <a class="btn btn-lg  btn-primary text-white" href="~/Booking/BookingVirtualizeDevice">Virtualise Device</a>
        </div>
    </div>
</div>
