@model DexterLab.Models.ViewModels.SSHRecordsVM

@{
    ViewBag.Title = "CreateSSH";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
@if (TempData["Failure"] != null)
{
    <div class="alert alert-danger">
        @TempData["Failure"]
    </div>
}

<h2 class="text-center block text-gray-700 font-bold mb-2">Create SSH Login</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full max-w-full mx-auto w-full max-w-full sm:max-w-screen-xs  md:max-w-screen-xs lg:max-w-screen-md lg:mt-5 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full max-w-full">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group mx-auto">
        <label class="control-label block text-gray-700 text-lg font-bold mb-2">SSH Username</label>
        <div class="mb-6 mx-auto">
            @Html.EditorFor(model => model.SSHUser, new { htmlAttributes = new { @class = "w-full max-w-full shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight  focus:bg-white focus:shadow-outline focus:border-blue-300" } })
            @Html.ValidationMessageFor(model => model.SSHUser, "", new { @class = "text-danger" })
        </div>
</div>

    <div class="form-group mx-auto">
        <label class="control-label block text-gray-700 text-lg font-bold mb-2">SSH Password </label>
            <div class="mb-6 mx-auto">
                @Html.PasswordFor(model => model.SSHPassword, new { @class = "w-full max-w-full shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight  focus:bg-white focus:shadow-outline focus:border-blue-300" })
                @Html.ValidationMessageFor(model => model.SSHPassword, "", new { @class = "text-danger" })
            </div>
</div>

    <div class="form-group mx-auto">
        <label class="control-label block text-gray-700 text-lg font-bold mb-2">SSH Confirm Password </label>
        <div class="mb-6 mx-auto">
            @Html.PasswordFor(model => model.SSHPasswordConfirm, new { @class = "w-full max-w-full shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight  focus:bg-white focus:shadow-outline focus:border-blue-300" })
            @Html.ValidationMessageFor(model => model.SSHPasswordConfirm, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="mx-auto">
            <input type="submit" value="Create SSH" class="btn btn-primary w-full max-w-full" />
        </div>
    </div>
</div>
}

