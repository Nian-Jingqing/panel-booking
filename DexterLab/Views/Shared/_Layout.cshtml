<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NTT Dexter Lab - @ViewBag.Title</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <br/>
    <nav class="nav navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/"><strong>NTT</strong></a>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    @if (ViewBag.Title == "Home Page")
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                    }

                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Booking/Index">Book A Panel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Booking/my-bookings">My Bookings</a>
                        </li>
                    }
                </ul>
                @if (Request.IsAuthenticated)
                {
                    if (User.IsInRole("User"))
                    {
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item text-white mt-2  mr-5 ml-5">@Html.Action("UserNavPartial", "Account", new { area = "" })</li>
                        </ul>
                    }

                }

                @if (Request.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="btn btn-danger" href="/Account/logout">Logout</a></li>
                    </ul>

                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="btn btn-primary" href="/Account/Login">Sign In</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>
